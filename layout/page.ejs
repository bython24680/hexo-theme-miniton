<% if (page.layout === 'about' || page.title === 'About' || page.path === 'about/index.html') { %>
    <!-- About Page Layout (Centered, No Sidebar) -->
    <div class="max-w-3xl mx-auto text-center">
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-lg p-10 md:p-16 transition-colors duration-300">
            <!-- Avatar -->
            <div class="w-40 h-40 mx-auto rounded-full p-1 bg-gradient-to-r from-primary to-purple-500 mb-8">
                <img src="<%= theme.avatar %>" alt="<%= config.author %>" class="rounded-full w-full h-full border-4 border-white dark:border-slate-800 object-cover">
            </div>
            
            <!-- Title -->
            <h1 class="text-4xl font-bold dark:text-white mb-2"><%= config.author %></h1>
            <p class="text-lg text-primary font-medium mb-6"><%= theme.author_title %></p>
            
            <!-- Content (Markdown from about/index.md) -->
            <div class="prose prose-lg dark:prose-invert mx-auto mb-10 text-slate-500 dark:text-slate-400">
                <%- page.content %>
            </div>
            
            <!-- Social Links -->
            <div class="flex justify-center gap-6">
                <% if(theme.social.github) { %><a href="<%= theme.social.github %>" class="text-slate-400 hover:text-[#333] dark:hover:text-white transform hover:scale-110 transition-all text-2xl"><i class="fab fa-github"></i></a><% } %>
                <% if(theme.social.twitter) { %><a href="<%= theme.social.twitter %>" class="text-slate-400 hover:text-[#1DA1F2] transform hover:scale-110 transition-all text-2xl"><i class="fab fa-twitter"></i></a><% } %>
                <% if(theme.social.email) { %><a href="<%= theme.social.email %>" class="text-slate-400 hover:text-primary transform hover:scale-110 transition-all text-2xl"><i class="fas fa-envelope"></i></a><% } %>
            </div>
        </div>
    </div>
<% } else { %>
    <!-- Generic Page Layout (Default) -->
    <article class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-8 transition-colors duration-300">
        <h1 class="text-3xl font-bold dark:text-white mb-6"><%= page.title %></h1>
        <div class="prose prose-lg dark:prose-invert max-w-none">
            <%- page.content %>
        </div>
    </article>
<% } %>