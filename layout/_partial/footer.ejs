<footer class="bg-white dark:bg-slate-800 border-t border-slate-200 dark:border-slate-700 mt-auto pt-12 pb-6">
    <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
            <!-- Col 1: About -->
            <div>
                <h3 class="font-bold text-lg mb-4 dark:text-white flex items-center gap-2">
                    <% if(theme.avatar){ %><img src="<%= theme.avatar %>" alt="Logo" class="w-8 h-8 rounded-full"><% } %>
                    <%= config.title %>
                </h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm leading-relaxed mb-4">
                    <%= theme.footer.description %>
                </p>
                <div class="flex gap-3">
                    <% if(theme.social.twitter) { %><a href="<%= theme.social.twitter %>" class="bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 p-2 rounded hover:bg-primary hover:text-white transition-colors"><i class="fab fa-twitter"></i></a><% } %>
                    <% if(theme.social.github) { %><a href="<%= theme.social.github %>" class="bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 p-2 rounded hover:bg-primary hover:text-white transition-colors"><i class="fab fa-github"></i></a><% } %>
                    <% if(theme.social.email) { %><a href="<%= theme.social.email %>" class="bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 p-2 rounded hover:bg-primary hover:text-white transition-colors"><i class="fas fa-envelope"></i></a><% } %>
                </div>
            </div>

            <!-- Col 2: Topics -->
            <%
            var hotCategories = theme.footer.hot_topics.enabled ? theme.footer.hot_topics.topics : [];
            hotCategories = site.categories.filter(cat => hotCategories.includes(cat.name));
            if (hotCategories.length === 0) {
                hotCategories = site.categories.sort('length', -1).limit(5);
            }
            %>
            <% if (hotCategories.length > 0) { %>
            <div>
                <h3 class="font-bold text-lg mb-4 dark:text-white">熱門主題</h3>
                <ul class="space-y-2 text-sm text-slate-500 dark:text-slate-400">
                    <% hotCategories.each(function(cat){ %>
                        <li><a href="<%- url_for(cat.path) %>" class="hover:text-primary"><%= cat.name %></a></li>
                    <% }) %>
                </ul>
            </div>
            <% } %>

            <!-- Col 3: Navigation -->
            <div>
                <h3 class="font-bold text-lg mb-4 dark:text-white">快速導航</h3>
                <ul class="space-y-2 text-sm text-slate-500 dark:text-slate-400">
                    <% for (var i in theme.menu){ %>
                        <li><a href="<%- url_for(theme.menu[i]) %>" class="hover:text-primary"><%= i %></a></li>
                    <% } %>
                </ul>
            </div>

            <!-- Col 4: Subscribe/Donate -->
            <div>
                <h3 class="font-bold text-lg mb-4 dark:text-white">支持創作</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm mb-4">如果內容對你有幫助，歡迎贊助！</p>
                <a href="<%= theme.footer.buy_coffee_link %>" class="w-full bg-primary hover:bg-indigo-700 text-white py-2 rounded-lg font-medium transition-colors flex items-center justify-center gap-2 mb-3">
                    <i class="fas fa-coffee"></i> Buy me a coffee
                </a>
            </div>
        </div>

        <div class="border-t border-slate-100 dark:border-slate-700 pt-6 flex flex-col md:flex-row justify-start items-center text-xs text-slate-400">
            <p>&copy; <%= date(new Date(), 'YYYY') %> <%= config.title %>. Theme by Bython.</p>
            <div class="flex gap-1 mt-2 md:mt-0 ml-2">
                Powered by
                <a href="https://hexo.io" class="text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-600" target="_blank">Hexo</a>
                & Theme
                <a href="https://github.com/bython24680/hexo-theme-miniton" class="text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-600" target="_blank">Miniton</a>
            </div>
        </div>
    </div>
</footer>
