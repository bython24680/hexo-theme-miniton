<div class="flex flex-col sm:flex-row items-center gap-4 justify-between bg-slate-50 dark:bg-slate-700/30 p-4 rounded-xl">
    <span class="text-slate-600 dark:text-slate-300 font-medium text-sm">分享文章：</span>
    <div class="flex flex-wrap justify-center gap-3">
        <!-- Twitter/X -->
        <button onclick="window.open('https://twitter.com/intent/tweet?text=' + encodeURIComponent(document.title) + '&url=' + encodeURIComponent(window.location.href), '_blank')" 
                class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-200 dark:bg-slate-600 hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors text-slate-600 dark:text-slate-300">
            <i class="fab fa-x-twitter"></i>
        </button>

        <!-- Facebook -->
        <button onclick="window.open('https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(window.location.href), '_blank')"
                class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-200 dark:bg-slate-600 hover:bg-[#1877F2] hover:text-white dark:hover:bg-[#1877F2] dark:hover:text-white transition-colors text-slate-600 dark:text-slate-300">
            <i class="fab fa-facebook-f"></i>
        </button>

        <!-- Threads -->
        <button onclick="window.open('https://www.threads.net/intent/post?text=' + encodeURIComponent(document.title + ' ' + window.location.href), '_blank')"
                class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-200 dark:bg-slate-600 hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-colors text-slate-600 dark:text-slate-300">
            <i class="fas fa-at"></i>
        </button>

        <!-- Plurk -->
        <button onclick="window.open('http://www.plurk.com/?qualifier=shares&status=' + encodeURIComponent(window.location.href) + ' ' + encodeURIComponent('(' + document.title + ')'), '_blank')"
                class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-200 dark:bg-slate-600 hover:bg-[#CF682F] dark:hover:bg-[#CF682F] hover:text-white dark:hover:text-white transition-colors text-slate-600 dark:text-slate-300">
            <span class="font-bold text-xs">P</span>
        </button>

        <!-- Instagram (Copy Link) / Generic Copy -->
        <button onclick="copyLink()" class="w-8 h-8 flex items-center justify-center rounded-full bg-slate-200 dark:bg-slate-600 hover:bg-indigo-500 dark:hover:bg-indigo-300 hover:text-white dark:hover:text-black transition-colors text-slate-600 dark:text-slate-300 group relative" title="複製連結 (適用於 Instagram)">
            <i class="fas fa-link"></i>
            <span id="copy-tooltip" class="absolute bottom-full mb-2 px-2 py-1 text-xs bg-black text-white rounded opacity-0 transition-opacity pointer-events-none whitespace-nowrap">已複製!</span>
        </button>
    </div>
</div>

<script>
    function copyLink() {
        navigator.clipboard.writeText(window.location.href).then(() => {
            const tooltip = document.getElementById('copy-tooltip');
            tooltip.classList.remove('opacity-0');
            setTimeout(() => tooltip.classList.add('opacity-0'), 2000);
        });
    }
</script>