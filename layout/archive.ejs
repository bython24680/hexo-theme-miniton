<div>
    <h2 class="text-2xl font-bold mb-6 dark:text-white"><%= theme.content_settings.archives.page_title %></h2> 
    <div class="mb-12">
        <div class="space-y-6">
            <% page.posts.limit(theme.content_settings.archives.posts_per_page).each(function(post){ %>
                <%- partial('_partial/article_card', {post: post}) %>
            <% }) %>
        </div>
        <!-- Pagination -->
        <% if (page.total > 1){ %>
        <div class="flex justify-center mt-12 gap-2">
            <%- paginator({
                prev_text: '<i class="fas fa-chevron-left"></i>',
                next_text: '<i class="fas fa-chevron-right"></i>',
                escape: false,
                class: 'flex gap-2',
                page_class: 'w-10 h-10 flex items-center justify-center rounded-lg bg-white dark:bg-slate-800 hover:bg-slate-100 dark:hover:bg-slate-700 text-slate-600 dark:text-slate-300 shadow-sm transition-colors',
                current_class: '!bg-primary text-white hover:bg-indigo-700 dark:bg-primary-dark'
            }) %>
        </div>
        <% } %>
    </div>
</div>