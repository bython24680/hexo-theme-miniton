<div class="text-center mb-12">
    <h1 class="text-3xl font-bold dark:text-white mb-4"><%= theme.content_settings.projects.page_title %></h1>
    <p class="text-slate-500 dark:text-slate-400"><%= theme.content_settings.projects.page_description %></p>
</div>

<!-- Projects Grid -->
<% if (theme.projects_list && theme.projects_list.length > 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% theme.projects_list.forEach(function(project) { %>
        <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm hover:shadow-lg transition-all overflow-hidden flex flex-col group h-full">
            <!-- Image -->
            <div class="h-48 bg-gray-200 overflow-hidden relative">
                <img src="<%= project.image %>" alt="<%= project.title %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105">
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors"></div>
            </div>

            <!-- Content -->
            <div class="p-6 flex-1 flex flex-col">
                <h3 class="text-xl font-bold mb-2 dark:text-white"><%= project.title %></h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm mb-4 flex-grow line-clamp-3">
                    <%= project.description %>
                </p>

                <!-- Tags -->
                <div class="flex flex-wrap gap-2 mb-6">
                    <% project.tags.forEach(function(tag) { %>
                        <span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-xs rounded font-medium">
                            <%= tag %>
                        </span>
                    <% }); %>
                </div>

                <!-- Links -->
                <div class="flex items-center gap-3 pt-4 border-t border-slate-100 dark:border-slate-700">
                    <% if (project.links.demo) { %>
                    <a href="<%= project.links.demo %>" target="_blank" class="text-primary hover:text-indigo-700 dark:text-primary-dark dark:hover:text-indigo-300 text-sm font-medium flex items-center gap-1">
                        <i class="fas fa-external-link-alt"></i> Live Demo
                    </a>
                    <% } %>

                    <% if (project.links.repo) { %>
                    <a href="<%= project.links.repo %>" target="_blank" class="text-slate-500 hover:text-slate-800 dark:text-slate-400 dark:hover:text-white text-sm font-medium flex items-center gap-1">
                        <i class="fab fa-github"></i> Code
                    </a>
                    <% } %>

                    <% if (project.links.detail) { %>
                    <a href="<%= project.links.detail %>" class="ml-auto text-slate-400 hover:text-primary dark:hover:text-white transition-colors">
                        <i class="fas fa-arrow-right"></i>
                    </a>
                    <% } %>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
<% } else { %>
    <div class="flex flex-col items-center justify-center py-20">
        <div class="text-6xl text-slate-400 dark:text-slate-600 mb-4"><i class="fa-regular fa-newspaper"></i></div>
        <p class="text-center text-slate-500 dark:text-slate-400 col-span-full"><%= theme.content_settings.projects.no_project_text %></p>
    </div>
<% } %>