<!-- Tags Page Layout (Full Width) -->
<div class="text-center mb-12">
    <h1 class="text-3xl font-bold dark:text-white mb-4"><%= config?.theme_config?.content_settings?.tags?.page_title ?? __('tags.title') %></h1>
    <p class="text-slate-500 dark:text-slate-400"><%= __('tags.description', site.tags.length) %></p>
</div>

<div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-8 md:p-12 text-center">
    <div class="flex flex-wrap justify-center gap-4">
        <% site.tags.each(function(tag){ %>
            <a href="<%- url_for(tag.path) %>" class="px-4 py-2 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 rounded-xl hover:bg-primary hover:text-white dark:hover:bg-primary-dark dark:hover:text-white transition-colors text-lg">
                <%= tag.name %> <span class="opacity-60 text-sm ml-1">(<%= tag.length %>)</span>
            </a>
        <% }) %>
    </div>
</div>
