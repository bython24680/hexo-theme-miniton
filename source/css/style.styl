::-webkit-scrollbar
  width: 6px
::-webkit-scrollbar-track
  background: transparent
::-webkit-scrollbar-thumb
  background: #cbd5e1; border-radius: 3px
.dark ::-webkit-scrollbar-thumb
  background: #475569
.nav-link
  position: relative
.nav-link::after
  content: ''
  position: absolute
  width: 0
  height: 2px
  bottom: -4px
  left: 0
  background-color: #4F46E5
  transition: width 0.3s
.dark .nav-link::after
  background-color: #818CF8
.nav-link:hover::after, .nav-link.active::after
  width: 100%
.calendar-grid
  display: grid
  grid-template-columns: repeat(7, 1fr)
  gap: 4px
  text-align: center
  font-size: 0.8rem
.calendar-day
  padding: 4px
  border-radius: 4px
.calendar-day.today
  background-color: #4F46E5
  color: white
  font-weight: bold

#local-search-result
  ul
    li.search-result-item
      padding: 0.25rem 0

      &:hover
        .search-result-item__title
          text-decoration: underline

      .search-result-item__title
        color: #1e293b
        font-weight: 700;
        margin-bottom: 0.25rem;

      .search-result-item__content
        color: #64748b;
        font-size: 0.875rem;
        line-height: 1.25rem;
        overflow: hidden;
.dark
  #local-search-result
    ul
      li.search-result-item
        .search-result-item__title
          color: #e2e8f0
        .search-result-item__content
          color: #94a3b8

#post-content
  h2
    font-size: 1.66em;
    font-weight: bold;
    line-height: 1.5;
    margin-top: 1.6rem;
    margin-bottom: 0.6rem;
  h3
    font-size: 1.33em;
    font-weight: 500;
    line-height: 1.5;
    margin-top: 1.3rem;
    margin-bottom: 0.4rem;
  p
    padding: 0.5rem 0 0.8rem 0
  a
    text-decoration: underline
  code
    border: 1px dotted #a0a0a0;
    padding: 0 0.25rem;
  img
    border-radius: 0.75rem;
    border: 1px solid #ededed;
    margin: 0.8rem 0 1.25rem;
  ul
  menu
    list-style: disc
    margin-inline-start: 1.25rem
    padding: 0.8rem 1rem
  ol
    list-style: decimal
    margin-inline-start: 1.25rem
    padding: 0.8rem 1rem

#toc
  .toc-content
    font-size: 0.875rem
    line-height: 1.75rem
    padding-left: 0.75rem
    border-left-width: 1px
    border-color: rgb(226, 232, 240)
    
    .toc-link:hover
      color: rgb(79, 70, 229)
    
    .toc-child
      padding-left: 1.85rem

.dark #toc .toc-content
  color: rgb(148, 163, 184)
  border-color: rgb(51, 65, 85)

article
  table
    width: 100%
    margin: 1.25rem 0

    thead
      tr
        th
          background-color: #475569
          color: #ffffff
          padding: 0.75rem 0

          &:first-child
            border-top-left-radius: 0.75rem
          &:last-child
            border-top-right-radius: 0.75rem

    tbody
      tr
        &:nth-child(even)
          background-color: #cbd5e1
        &:last-child td:first-child
          border-bottom-left-radius: 0.75rem
        &:last-child td:last-child
          border-bottom-right-radius: 0.75rem

        td
          padding: 0.75rem

  figure.highlight
    background-color: #1e2a3b
    color: #ededed
    padding: 1rem 1.25rem
    border-radius: 0.75rem
    margin: 1.75rem 0

    table
      display: block
      margin: 0
      overflow-x: scroll

      td.gutter
        padding: 0 1.5rem 0
        color: #a0a0a0

.dark article figure.highlight
  background-color: #252525
